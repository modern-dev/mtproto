{
  "compilerOptions": {
    "module": "es6",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": false,
    "target": "es6",
    "lib": ["esnext", "dom"],
    "outDir": "./lib",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}